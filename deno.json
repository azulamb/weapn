{
  "tasks": {
    "convert": "deno run --allow-read --allow-write tools/convert.ts",
    "update": "cp webview2/x64/Release/webview2.dll webview2.dll",
    "start": "deno run --allow-ffi --allow-env --unstable src/main.ts"
  },
  "lock": false,
  "lint": {
    "include": ["./src", "./tools", "deno.json"]
  },
  "fmt": {
    "include": ["./src", "./tools", "deno.json"],
    "useTabs": false,
    "indentWidth": 2,
    "lineWidth": 160,
    "semiColons": true,
    "singleQuote": true
  }
}
